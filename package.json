{
  "name": "turbo-fit",
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.20",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:unit": "turbo run test --filter='!*e2e*'",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:web": "turbo run test:e2e --filter=web",
    "test:e2e:mobile": "turbo run test:e2e --filter=native",
    "test:all": "turbo run test:all",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test --coverage",
    "test:ci": "turbo run test:ci"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "base-64": "^1.0.0"
  }
}
