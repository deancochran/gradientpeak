# Test Environment Configuration
# Copy this file to .env.test and fill in your test values

# Node Environment
NODE_ENV=test

# Supabase Test Configuration
SUPABASE_URL=https://your-test-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-test-service-role-key
SUPABASE_ANON_KEY=your-test-anon-key

# Public Supabase Config (for web app)
NEXT_PUBLIC_SUPABASE_URL=https://your-test-project.supabase.co

# Public Supabase Config (for mobile app)
EXPO_PUBLIC_SUPABASE_URL=https://your-test-project.supabase.co
EXPO_PUBLIC_SUPABASE_KEY=your-test-anon-key

# Clerk Test Configuration
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_WEBHOOK_SECRET=whsec_your-webhook-secret

# Public Clerk Config (for web app)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key

# Public Clerk Config (for mobile app)
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key

# Test Database Configuration
TEST_SCHEMA=public
CLEANUP_BETWEEN_TESTS=true

# Playwright Configuration
PLAYWRIGHT_BASE_URL=http://localhost:3000

# Test timeouts (milliseconds)
TEST_TIMEOUT=30000
E2E_TIMEOUT=60000

# Parallel test configuration
JEST_MAX_WORKERS=2
PLAYWRIGHT_WORKERS=1

# Coverage configuration
COVERAGE_THRESHOLD=80