{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "ngrok": "ngrok http 3000 --domain=outgoing-ape-repeatedly.ngrok-free.app",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "check-types": "tsc --noEmit",

    "test": "npm run test:unit && npm run test:e2e",

    "test:unit": "jest",
    "test:watch": "jest --watch",

    "test:e2e": "NODE_ENV=test playwright test",
    
    "test:e2e:headed": "npm run test:e2e -- --headed",
    "test:e2e:debug": "npm run test:e2e -- --debug",
    
    "test:ci": "jest --ci --coverage --watchAll=false && playwright test"
  },
  "dependencies": {
    "@clerk/nextjs": "6.22.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-syntax-highlighter": "^15.5.13",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.0",
    "next": "15.3.4",
    "postcss": "^8.5.6",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-syntax-highlighter": "^15.6.1",
    "svix": "^1.73.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/testing-utils": "workspace:*",
    "@playwright/test": "^1.47.2",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "jest-environment-jsdom": "^29.7.0",
    "node-mocks-http": "^1.14.1"
  }
}
