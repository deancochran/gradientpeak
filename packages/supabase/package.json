{
  "name": "@repo/supabase",
  "version": "0.0.0",
  "private": true,
  "main": "./index.ts",
  "exports": {
    ".": "./index.ts"
  },
  "scripts": {
    "update-types": "bun run generate-types && bun run generate-schemas",
    "generate-types": "supabase gen types typescript --local > database.types.ts",
    "generate-schemas": "supazod -i database.types.ts -o supazod/schemas.ts -t supazod/schemas.types.ts -s public,schema_a,schema_b"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "supabase": "^2.53.6",
    "supazod": "^2.0.0"
  }
}
