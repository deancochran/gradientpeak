{
  "name": "@repo/supabase",
  "version": "0.0.0",
  "private": true,
  "main": "./index.ts",
  "exports": {
    ".": "./index.ts"
  },
  "scripts": {
    "dev": "run-p dev:supabase dev:functions",
    "dev:supabase": "supabase start",
    "dev:functions": "supabase functions serve",
    "functions:deploy": "supabase functions deploy",
    "functions:new": "supabase functions new",
    "update-types": "npm run generate-types && npm run generate-schemas",
    "generate-types": "supabase gen types typescript --local > database.types.ts",
    "generate-schemas": "supazod -i database.types.ts -o supazod/schemas.ts -t supazod/schemas.types.ts -s public,schema_a,schema_b",
    "seed-templates": "tsx scripts/seed-templates.ts",
    "seed-training-plans": "tsx scripts/seed-training-plan-templates.ts"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "supabase": "^1.0.0",
    "supazod": "^4.5.0"
  }
}
